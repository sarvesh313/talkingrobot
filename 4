def exit():
    import os
    e = input("Are you sure you want to exit.. press 'Y' to exit: ")
    os.system('clear')
    if (e =='Y') or (e == 'y'):
      print("Good Bye.. exiting Robo meet., see you again")
      bye()
      quit()
      os.system("clear")
    else:
      robot_main()
