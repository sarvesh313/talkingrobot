def robot_main():
  import os
  os.system("clear")
  input("Press enter to continue...")
  os.system('clear')
  printOptions()
  argument = input ("Enter your option: ")
  os.system('clear')
  if (argument == "1"):     
         speech()
  elif (argument == "2"):
         fibonaccinums()
  elif (argument == "3"):
        dice()
  elif (argument == "16"):
        guide()
  elif (argument == "4"):
        robotcounter()
  elif (argument == "17"):
        exit()
  elif (argument == "5"):
        robotwcount()
  elif (argument == "6"):
        robotrigenerator()
  elif (argument == "7"):
        calculator()
  elif (argument == "8"):
        reverser()
  elif (argument == "9"):
        vowelcoun()
  elif (argument == "10"):
        numcount()
  elif (argument == "11"):
        crArr()
  elif (argument == "12"):
        oORe()
  elif (argument == "13"):
        WPM()
  elif (argument == "14"):
        spread()
  elif (argument == "15"):
        consec()
  else:
        print("Invalid Input")
        print("Please Wait...")
        print("Redirecting...")
        time.sleep(4)
        os.system("clear")
        exit1()


