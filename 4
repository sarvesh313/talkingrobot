    LetNum()
    Endo()
  robot_wait()
def robotwcount():
  print("Welcome to Word Counter")
  inup = input("Enter some characters: ")
  sp = " "
  num = 1
  for le in inup:
    if le == sp:
      num = num + 1
  print(num)
  time.sleep(8)
  robot_wait()
